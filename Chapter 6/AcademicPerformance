using System;

namespace AcademicPerformanc;

class Program
{
    static void Main(string[] args)
    {

        Console.Write("Enter your grade: ");
        double grade = Convert.ToDouble(Console.ReadLine());

        switch (grade >= 3.0) 
        {
            case true:
                Console.WriteLine("You passed!");
                break;

            case false:
                Console.WriteLine("You failed!");
                break;
        }           

    }

}
